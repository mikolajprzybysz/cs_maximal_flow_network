<UserControl x:Class="MaximalFlowNetwork.GraphCanva"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:myNS="clr-namespace:MaximalFlowNetwork"
             Width="Auto"
             Height="Auto"
    >
    
        <Border BorderBrush="Black" BorderThickness="2" Width="{Binding ElementName=canvas, Path=Width ,UpdateSourceTrigger=PropertyChanged}" Height="{Binding ElementName=canvas, Path=Height ,UpdateSourceTrigger=PropertyChanged}">

            <Canvas  x:Name="canva" Width="{Binding Path=Width ,UpdateSourceTrigger=PropertyChanged}" Height="{Binding Path=Height ,UpdateSourceTrigger=PropertyChanged}">

            </Canvas>

        </Border>
   
</UserControl>
