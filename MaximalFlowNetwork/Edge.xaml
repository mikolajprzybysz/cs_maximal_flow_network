<UserControl x:Class="MaximalFlowNetwork.Edge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">

    <Canvas x:Name="panel">
        
        <Path x:Name="path" Stroke="Black"  StrokeThickness="2" Width="Auto" Height="Auto">
            
            <Path.Data>
                
                <GeometryGroup x:Name="group" >
     
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="angleTransform" CenterY="4" CenterX="0" Angle="{Binding Path=Angle}"/>

                </TransformGroup>
            </Path.RenderTransform>
        </Path>
<Label x:Name="label" FontSize="14"  Foreground="Green" FontWeight="Bold"></Label>
    </Canvas>
   

</UserControl>
